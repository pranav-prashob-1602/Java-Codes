package com.pranav.designPatterns.behavioural.chainOfResponsibilityPattern;

public class SubNumbers implements Chain{
	private Chain nc;
	
	public void setNextChain(Chain c) {
		nc = c;
	}
	
	public void calculate(Numbers req) {
		if(req.getCalculationWanted() == "sub") {
			System.out.println("Result : " + (req.getN1()-req.getN2()));
		}else {
			nc.calculate(req);
		}
	}
	
}
